@{
    var usuario = (PasswordChange.Models.User)Session["DataUser"];
    ViewBag.Title = "About";
    Layout = "~/Views/Shared/_LayoutTemplate2.cshtml";
}
<script type="text/javascript">
    let descripcion = "@usuario.descripcion";
</script>
<script src="~/Scripts/Pages/reCatcha.js"></script>
<script type="text/javascript" src="https://www.google.com/recaptcha/api.js?onload=onloadCallback&render=explicit"
        async defer></script>

<link href="~/Content/Template/stylesCustoms/general-fondo-color.css" rel="stylesheet" />

<div class="col-sm-12" id="alertSuccess">
    <!--filling a Dynamic message with Ajax-->
</div>

<div class="col-sm-12" id="alertFails">
    <!--filling a Dynamic message with Ajax-->
</div>
<div class="form-container outer">
    <div class="form-form">
        <div class="form-form-wrap">
            <div class="form-container">
                <div class="form-content">
                    <h6 class="">Hola! @usuario.nombre  </h6>
                    <p class="p-gris">
                        A continuación, selecciona el medio por el cual será enviado el Código de verificación de tu usuario @usuario.email
                        para validar que eres tú.
                    </p>

                    @using (Html.BeginForm("CodeConfirmationForm", "Home", FormMethod.Post, new { id = "idForm", @class = "text-left" }))
                    {
                        <p class="text-center"><img src="https://pix.uniminuto.edu/pix/0.JPG" class="rounded-circle" style="width:150px;" /></p>

                        <div class="form">

                            <div class="input mb-1">
                                <h3 class="text-center"><span>Seleccione el método de envió </span></h3>
                                <p class="p-gris text-center">
                                    ¿Estos no son mis datos actualizados?.&nbsp;Si estos no son tus datos actualízalos para lograr realizar este proceso
                                    de restablecimiento de contrase&ntilde;a.
                                </p>
                                <div class="n-chk container">
                                    <b>
                                        <label class="new-control new-radio radio-classic-primary">
                                            <input type="radio" id="rbtMobile" class="new-control-input" name="custom-radio-2" value="@ViewBag.sendbymobile">
                                            <span class="new-control-indicator text-left"></span>
                                            <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                                            &nbsp;<strong id="viewbagMobileReplace">@ViewBag.mobileReplace</strong>
                                        </label>
                                    </b>
                                </div>
                                <div class="n-chk container">
                                    <h6>
                                        <label class="new-control new-radio radio-classic-primary">
                                            <input type="radio" id="rbtEmail" class="new-control-input" name="custom-radio-2" value="@ViewBag.sendbyemail">
                                            <span class="new-control-indicator text-left"></span> <svg viewBox="0 0 24 24" width="24" height="24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                                            &nbsp;<strong id="viewbagEmailReplace">@ViewBag.emailReplace</strong>
                                        </label>
                                    </h6>
                                </div>
                                <div class="n-chk container">
                                    <div id="dvCaptcha">
                                    </div>
                                    <input type="hidden" id="hfCaptcha" />
                                    <span id="rfvCaptcha" class="error" style="display:none">Captcha validation is required.</span>
                                </div>

                            </div>
                            <div class="d-sm-flex justify-content-between">
                                <div class="field-wrapper" style="display: none" id="btnOptions">
                                    <button type="button" id="btnSendCode" class="btn btn-azul" value="">Enviar código <div id="spinerBtnSend" class="spinner-border text-white mr-2 align-self-center loader-sm "></div></button>
                                    <button type="button" id="btnTengoCode" class="btn btn-amarillo mt-1" value="@ViewBag.tengoCodigo">Ya cuento con un código </button>
                                </div>
                            </div>

                        </div>

                    }
                    <button id="showEnlace" style="display:none" class="btn btn-success btn-block mt-1">Actualizar Datos</button>
                    <span id="showTexto" style="display:none" class="badge outline-badge-primary btn-block"> Actualiza tus datos con gestión humana </span>
                </div>
            </div>
        </div>
    </div>
</div>

@section FormMethodOfShipment {
    <script src="~/Scripts/Pages/AlertMessages.js?id=532"></script>
    <script src="~/Scripts/Pages/FormMethodOfShipment.js?id=533"></script>
    <script src="~/Scripts/Pages/BlockControlKey.js?id=532"></script>
}